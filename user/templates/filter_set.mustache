{{!
    @template core_user/filter_form

    Template for the form containing one or more filter rows.

    Example context (json):
    {
        "jointypes": [
            {
                "value": 1,
                "label": "All",
            },
            {
                "value": 2,
                "label": "Any",
            },
            {
                "value": 0,
                "label": "None",
            }
        ],
        "jointypesdefaultvalue": 1,
        "jointypesdefaultlabel": "All",
        "filtertypes": [
            {
                "value": "status",
                "label": "Status"
            }
        ],
        "filtertypesdefaultvalue": "",
        "filtertypesdefaultlabel": "Select",
        "enhanceddropdown": [
            {
                "options": [
                    {
                        "value": "0",
                        "label": "active"
                    },
                    {
                        "value": "1",
                        "label": "inactive"
                    }
                ]
            }
        ]
    }
}}

<div id="{{uniqid}}-user-filterset" class="filter-group mt-5 p-3 rounded border border-secondary" data-participants-filterset="true">
    <div id="{{uniqid}}-filterset-base-data" data-join-types="{{jointypesjson}}" data-filter-types="{{filtertypesjson}}"
         data-join-types-default="{{jointypesdefaultjson}}" data-filter-types-default="{{filtertypesdefaultjson}}"></div>

    <div id="{{uniqid}}-user-filters">
        {{> core_user/user_filter_row }}
    </div>
    <div class="display-block">
        &nbsp;
        <button id="{{uniqid}}-addcondition" type="button" class="btn btn-link d-inline-block float-left">
            <i class="fa fa-plus"></i><span class="pl-3">{{#str}}addcondition{{/str}}</span>
        </button>

        <div class="float-right">
            <button id ="{{uniqid}}-clearall" type="button" class="btn btn-light d-inline-block">{{#str}}clearfilters{{/str}}</button>
            <button id ="{{uniqid}}-submit" type="button" class="btn btn-primary d-inline-block">{{#str}}applyfilters{{/str}}</button>
        </div>
    </div>
</div>

{{#js}}

require(['core_user/local/user_filters/filter_set'], function(FilterSet) {
    FilterSet.init('{{uniqid}}');
});

{{/js}}
