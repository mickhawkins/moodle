{{!
    @template core_user/user_filter_types/enhanced_dropdown

    Template used by enahanced dropdown filters.

    Context variables required for this template:

    Example context (json):
    {
        "enhanceddropdown": [
            {
                "filtername": "status",
                "options": [
                    {
                        "value": "0",
                        "label": "Active"
                    },
                    {
                        "value": "1",
                        "label": "Inactive"
                    }
                ]
            },
           {
                "filtername": "role",
                "options": [
                    {
                        "value": "-1",
                        "label": "No roles"
                    },
                    {
                        "value": "3",
                        "label": "Teacher"
                    },
                    {
                        "value": "5",
                        "label": "Student"
                    }
                ]
            }
        ]
    }
}}

{{#enhanceddropdown}}
<select name="{{uniqid}}-{{filtername}}-filter-options-dropdown" id="{{uniqid}}-{{filtername}}-filter-options-dropdown" multiple="multiple"
        class="form-autocomplete-original-select hidden">
    {{#options}}
        <option value="{{value}}">{{label}}</option>
    {{/options}}
</select>
{{/enhanceddropdown}}
