{{!
    @template core_user/user_filter_types/enhanced_dropdown

    Template used by enahanced dropdown filters.

    Context variables required for this template:
      * uniqid - ID unique to the current filter row's template.

    Example context (json):
    {
        "enhanceddropdown": [
            {
                "options": [
                    {
                        "value": "0",
                        "label": "Active"
                    },
                    {
                        "value": "1",
                        "label": "Inactive"
                    }
                ]
            }
        ]
    }
}}

{{#enhanceddropdown}}
<select name="{{uniqid}}-filter-options-dropdown" id="{{uniqid}}-filter-options-dropdown" multiple="multiple"
        class="form-autocomplete-original-select hidden">
    {{#options}}
        <option value="{{value}}">{{label}}</option>
    {{/options}}
</select>
{{/enhanceddropdown}}
